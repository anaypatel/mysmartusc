<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/settingsLabel"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:text="Settings"
            android:textStyle="bold"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/urgentLabel"
            android:gravity="left"
            android:paddingLeft="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:text="Update Urgent Keywords"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/urgentKeywords"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_margin="10sp" />

        <TextView
            android:id="@+id/savedLabel"
            android:gravity="left"
            android:paddingLeft="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:text="Update Saved Keywords"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/savedKeywords"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_margin="10sp" />

        <TextView
            android:id="@+id/spamLabel"
            android:gravity="left"
            android:paddingLeft="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:text="Update Spam Keywords"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/spamKeywords"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_margin="10sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/saveSubject"
                android:layout_width="wrap_content"
                android:text="Save Subject"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveSender"
                android:layout_width="wrap_content"
                android:text="Save Sender"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveBody"
                android:layout_width="wrap_content"
                android:text="Save Body"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>